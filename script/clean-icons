#!/usr/bin/env coffee

replace = require("replace")

iconPaths = ['./resources/icons/']

replace({
  regex: "\\s+<!--[^>]+-->",
  replacement: '',
  paths: iconPaths
  recursive: true
})

replace({
  regex: "\\s+<title>[^<]+</title>",
  replacement: '',
  paths: iconPaths
  recursive: true
})

replace({
  regex: "\\s+<desc>[^<]+</desc>",
  replacement: '',
  paths: iconPaths
  recursive: true
})

replace({
  regex: "\\s+<defs>\\s*</defs>",
  replacement: '',
  paths: iconPaths
  recursive: true
})

removeAttr = (attr) ->
  replace({
    regex: " #{attr}=\"[^\"]+\"",
    replacement: '',
    paths: iconPaths
    recursive: true
  })

removeAttr('id')
removeAttr('sketch:type')
